<mvc:View controllerName="com.danielwehner.invoicekuga.controller.customer.CustomerDetail"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form" xmlns:table="sap.ui.table">
	<Panel expandable="true" expanded="true">
		<headerToolbar>
			<Toolbar height="3rem">
				<core:Icon src="sap-icon://business-card" size="1.5rem"/>
				<Title text="{i18n>Customer.panel.address.title}"/>
			</Toolbar>
		</headerToolbar>
        <content>
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm editable="true" layout="ResponsiveGridLayout"
                    labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false"
                    emptySpanXL="4" emptySpanL="3" emptySpanM="2" emptySpanS="0"
                    columnsXL="1" columnsL="1" columnsM="1"
                    singleContainerFullSize="false" >
                    <form:content>
                        <Label text="{i18n>Customer.id}"/>
                        <Input value="{/customer/id}"/>
                        <Label text="{i18n>Customer.firstname} / {i18n>Customer.lastname}"/>
                        <Input value="{/customer/firstname}"/>
                        <Input value="{/customer/lastname}">
                            <layoutData>
                                <layout:GridData span="XL1 L2 M4 S12"/>
                            </layoutData>
                        </Input>
                        <Label text="{i18n>Customer.street}"/>
                        <Input value="{/customer/street}"/>
                        <Label text="{i18n>Customer.zip} / {i18n>Customer.city}"/>
                        <Input value="{/customer/zip}">
                            <layoutData>
                                <layout:GridData span="XL1 L2 M2 S12"/>
                            </layoutData>
                        </Input>
                        <Input value="{/customer/city}"/>
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
    </Panel>
	<Panel expandable="true" expanded="true">
		<headerToolbar>
			<Toolbar height="3rem">
				<core:Icon src="sap-icon://address-book" size="1.5rem"/>
				<Title text="{i18n>Customer.panel.contacts.title}"/>
				<ToolbarSpacer/>
				<Button icon="sap-icon://add"/>
			</Toolbar>
		</headerToolbar>
        <content>
            <table:Table
				rows="{/contacts}"
				selectionMode="MultiToggle"
				visibleRowCount="7">
				<table:columns>
					<table:Column>
						<Label text="Contact Type"/>
						<table:template>
							<Text text="{type}"/>
						</table:template>
					</table:Column>
                    <table:Column>
						<Label text="Contact"/>
						<table:template>
							<Text text="{data}"/>
						</table:template>
					</table:Column>
                    <table:Column>
						<Label text="Comments"/>
						<table:template>
							<Text text="{comments}"/>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
        </content>
    </Panel>
</mvc:View>
