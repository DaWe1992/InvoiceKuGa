<mvc:View
	controllerName="com.danielwehner.invoicekuga.controller.customer.Customer"
	height="100%"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<SplitContainer
		id="splitContainer"
		height="100%"
		initialMaster="master"
		initialDetail="placeholder">

		<!-- Master pages -->
		<masterPages>
			<!-- Customer list page -->
			<Page
				id="master"
				height="100%"
				title="{i18n>Customer.page.master.title}"
				icon="sap-icon://action"
				class="sapUiStdPage"
				showHeader="true">
				<subHeader>
					<Toolbar>
						<SearchField liveChange="onSearch" width="100%"/>
					</Toolbar>
				</subHeader>
				<content>

					<!-- Customer list -->
					<List
						id="customerList"
						items="{path: '/'}"
						height="100%">
						<items>
							<CustomListItem type="Navigation" press="onItemPress" custom:to="detail">
								<HBox>
									<core:Icon
										src="sap-icon://customer"
										size="2rem"
										class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
									/>
									<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
										<Label text="{id}" class="text-blue"/>
										<Label text="{address}"/>
										<Label text="{firstname} {lastname}"/>
									</VBox>
								</HBox>
							</CustomListItem>
						</items>
					</List>
				</content>
				<footer>
					<Toolbar>
						<content>
							<ToolbarSpacer>
								<layoutData>
									<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
								</layoutData>
							</ToolbarSpacer>
							<Button icon="sap-icon://add" press="handleToggleClick"></Button>
						</content>
					</Toolbar>
				</footer>
			</Page>
		</masterPages>

		<!-- Detail pages -->
		<detailPages>
			<!-- Placeholder page -->
			<Page
				id="placeholder"
				height="100%"
				title="{i18n>Customer.page.detail.title}"
				class="sapUiStdPage"
			/>
			<!-- Customer detail page -->
			<Page
				id="detail"
				height="100%"
				title="{i18n>Customer.page.detail.title}"
				class="sapUiStdPage sapUiResponsiveContentPadding">
				<content>
					<mvc:XMLView viewName="com.danielwehner.invoicekuga.view.customer.CustomerDetail" height="100%"/>
				</content>
				<footer>
					<Toolbar>
						<content>
							<ToolbarSpacer>
								<layoutData>
									<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
								</layoutData>
							</ToolbarSpacer>
							<Button text="{i18n>Misc.save}" type="Accept" press=""></Button>
							<Button text="{i18n>Misc.delete}" type="Reject" press=""></Button>
						</content>
					</Toolbar>
				</footer>
			</Page>
		</detailPages>
	</SplitContainer>
</mvc:View>
