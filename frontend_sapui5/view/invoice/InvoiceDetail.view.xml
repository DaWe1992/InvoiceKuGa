<mvc:View
	controllerName="com.danielwehner.invoicekuga.controller.invoice.InvoiceDetail"
	height="100%"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">

	<Page
		showHeader="false"
		class="sapUiResponsiveContentPadding">
		<content>
			<IconTabBar
				expandable="false"
				expanded="true"
				stretchContentHeight="true"
				class="sapUiResponsiveContentPadding">
				<items>
					<!-- ********************************************************************************** -->
					<!-- Invoice data -->
					<IconTabFilter
						icon="sap-icon://travel-expense-report"
						iconColor="Default"
						text="{i18n>Invoice.icontab.data}">

						<!-- Invoice head data -->
						<core:Fragment
							type="XML"
							fragmentName="com.danielwehner.invoicekuga.fragment.invoice.InvoiceHead"
							height="100%"/>

						<!-- Invoice positions -->
						<core:Fragment
							type="XML"
							fragmentName="com.danielwehner.invoicekuga.fragment.invoice.InvoicePositions"
							height="100%"/>

					</IconTabFilter>
					<IconTabSeparator/>
					<!-- ********************************************************************************** -->
					<!-- Technical invoice information -->
					<IconTabFilter
						icon="sap-icon://technical-object"
						iconColor="Default"
						text="{i18n>Invoice.icontab.info}">

						<core:Fragment
							type="XML"
							fragmentName="com.danielwehner.invoicekuga.fragment.TechInfo"
							height="100%"/>

					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>

		<footer>
			<Toolbar>
				<content>
					<core:Icon
						src="sap-icon://print"
						size="1.5em"
						class="sapUiSmallMarginBegin"/>
					<Link
						text="{i18n>Invoice.print}"
						href="/invoices/{/invoice/id}/print"
						class="sapUiTinyMarginBegin"/>
					<ToolbarSpacer>
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
						</layoutData>
					</ToolbarSpacer>
					<Button
						text="{i18n>Misc.save}"
						type="Accept"
						press=""/>
					<Button
						text="{i18n>Misc.delete}"
						type="Reject"
						press=""/>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
