<mvc:View controllerName="com.danielwehner.invoicekuga.controller.Customer" height="100%" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
    <SplitContainer
        id="SplitContDemo" height="100%"
        initialMaster="master" initialDetail="detail">
        <masterPages>
			<Page
                id="master" height="100%" title="{i18n>title_customer_list}"
                icon="sap-icon://action" class="sapUiStdPage" showHeader="true">
                <subHeader>
        			<Toolbar>
        				<SearchField liveChange="onSearch" width="100%"/>
        			</Toolbar>
        		</subHeader>
				<content>
					<List height="100%">
						<items>
                            <CustomListItem>
                    			<HBox>
                    				<core:Icon src="sap-icon://customer" size="2rem" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
                    				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                    					<Label text="Herr Daniel Wehner" class="text-blue"/>
                    					<Label text="Im Pförtlein 14a"/>
                                        <Label text="97688 Bad Kissingen"/>
                    				</VBox>
                    			</HBox>
                    		</CustomListItem>
                            <CustomListItem>
                    			<HBox>
                    				<core:Icon src="sap-icon://customer" size="2rem" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
                    				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                    					<Label text="Frau Julia Musterfrau" class="text-blue"/>
                    					<Label text="Musterstraße 12"/>
                                        <Label text="97688 Musterstadt"/>
                    				</VBox>
                    			</HBox>
                    		</CustomListItem>
                            <CustomListItem>
                    			<HBox>
                    				<core:Icon src="sap-icon://customer" size="2rem" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
                    				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                    					<Label text="Frau Elke Borsutzky-Erhard" class="text-blue"/>
                    					<Label text="Tulpenweg 2"/>
                                        <Label text="97616 Bad Neustadt/Saale"/>
                    				</VBox>
                    			</HBox>
                    		</CustomListItem>
						</items>
					</List>
				</content>
                <footer>
                    <Toolbar>
                        <content>
                            <ToolbarSpacer>
            					<layoutData>
            						<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
            					</layoutData>
            				</ToolbarSpacer>
                            <Button icon="sap-icon://add" press="handleToggleClick" id="toggleButton"></Button>
                        </content>
                    </Toolbar>
                </footer>
			</Page>
		</masterPages>
		<detailPages>
			<Page
                id="detail" height="100%"
                title="{i18n>title_customer_details}" class="sapUiStdPage">
				<content>
                    <mvc:XMLView viewName="com.danielwehner.invoicekuga.view.CustomerDetail" height="100%"/>
				</content>
			</Page>
		</detailPages>
	</SplitContainer>
</mvc:View>
