<core:View controllerName="com.danielwehner.invoicekuga.controller.App" height="100%"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt" xmlns:mvc="sap.ui.core.mvc">
    <tnt:ToolPage id="toolPage" height="100%">
        <tnt:header>
            <tnt:ToolHeader>
                <Button
                    id="sideNavigationToggleButton" icon="sap-icon://menu2"
                    type="Transparent" press="onSideNavButtonPress">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer width="20px"/>
				<tnt:ToolHeaderUtilitySeparator/>
				<ToolbarSpacer>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
					</layoutData>
				</ToolbarSpacer>
				<Label text="{i18n>App.title}"/>
				<ToolbarSpacer>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
					</layoutData>
				</ToolbarSpacer>
				<Button text="Daniel Wehner" type="Transparent" press="">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
            <tnt:SideNavigation expanded="true" itemSelect="onItemSelect">
				<tnt:NavigationList>
					<tnt:NavigationListItem text="{i18n>Navi.customers}" icon="sap-icon://customer" select="onNavToCustomers"/>
                    <tnt:NavigationListItem text="{i18n>Navi.invoices}" icon="sap-icon://travel-expense-report"/>
                    <tnt:NavigationListItem text="{i18n>Navi.earnings}" icon="sap-icon://money-bills"/>
                    <tnt:NavigationListItem text="{i18n>Navi.statistics}" icon="sap-icon://area-chart"/>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="container" height="100%">
				<!-- Here goes the content (loaded by router) -->
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</core:View>
