<core:View
	controllerName="com.danielwehner.invoicekuga.controller.App"
	height="100%"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">

    <tnt:ToolPage id="toolPage" height="100%">

		<!-- ToolPage header -->
        <tnt:header>
            <tnt:ToolHeader>
                <Button
                    id="sideNavigationToggleButton"
					icon="sap-icon://menu2"
                    type="Transparent"
					press="onSideNavButtonPress">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<Image
					src="../img/sap.png"
					densityAware="false"
					height="30px"
					width="55px">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Image>
				<ToolbarSpacer>
					<layoutData>
						<OverflowToolbarLayoutData
							priority="NeverOverflow"
							minWidth="20px"/>
					</layoutData>
				</ToolbarSpacer>
				<Label text="{i18n>App.title} ({i18n>App.version})"/>
				<ToolbarSpacer>
					<layoutData>
						<OverflowToolbarLayoutData
							priority="NeverOverflow"
							minWidth="20px"/>
					</layoutData>
				</ToolbarSpacer>
				<Button
					text="{/username}"
					type="Transparent"
					press="onUserNamePress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
			</tnt:ToolHeader>
		</tnt:header>

		<!-- Toolpage sidecontent -->
		<tnt:sideContent>
            <tnt:SideNavigation
				expanded="{= !${device>/system/phone}}"
				itemSelect="onItemSelect">
				<tnt:item>
					<tnt:NavigationList>
						<tnt:NavigationListItem
							text="{i18n>Navi.customers}"
							icon="sap-icon://customer"
							select="onNavToCustomers"/>
	                    <tnt:NavigationListItem
							text="{i18n>Navi.invoices}"
							icon="sap-icon://travel-expense-report"
							select="onNavToInvoices"/>
	                    <tnt:NavigationListItem
							text="{i18n>Navi.earnings}"
							icon="sap-icon://money-bills"
							select="onNavToEarnings"/>
	                    <tnt:NavigationListItem
							text="{i18n>Navi.statistics}"
							icon="sap-icon://area-chart"
							select="onNavToStatistics"/>
					</tnt:NavigationList>
				</tnt:item>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListItem
							text="{i18n>Navi.settings}"
							icon="sap-icon://action-settings"
							select=""/>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>

		<!-- Main contents of the app -->
		<tnt:mainContents>
			<NavContainer
				id="container"
				height="100%">
				<!-- Here goes the content (loaded by router) -->
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</core:View>
