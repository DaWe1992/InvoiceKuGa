<mvc:View
	controllerName="com.danielwehner.invoicekuga.controller.earning.Earning"
	height="100%"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">

	<Page title="{i18n>Earning.page.title}">
		<subHeader>
			<Toolbar>
				<SearchField/>
			</Toolbar>
		</subHeader>
		<content>
			<!-- Earnings list -->
			<List
				items="{path: '/'}"
				growing="true"
				growingThreshold="5"
				growingScrollToLoad="false">
				<ObjectListItem
		            title="{description}"
					intro="{date}"
					icon="sap-icon://money-bills"
		            number="{
						path: 'amount',
						type: 'sap.ui.model.type.Float',
						formatOptions: {
							minFractionDigits: 2,
							maxFractionDigits: 2
						}
					}"
		        	numberState="Success"
					numberUnit="EUR"
				/>
			</List>
		</content>
		
		<footer>
			<Toolbar>
				<content>
					<ToolbarSpacer>
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
						</layoutData>
					</ToolbarSpacer>
					<Button icon="sap-icon://add" press="onOpenAddEarningDialog"/>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
